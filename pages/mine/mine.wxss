.tx {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2px solid #86c365;
  padding: 4px;
}

.nickname {
  color: white;
  font-size: 36rpx;
}

.membername {
  color: #B6B6B7;
  font-size: 26rpx;
}

.card {
  border-radius: 40rpx;
  background: white;
  margin: 30rpx;
  font-size: 30rpx;
  color: #332C2B;
}

.card-head {
  color: #8B8B8C;
  background: #F7F7F7;
  border-bottom: 1px solid #C3C3C3;
  border-radius: 40rpx 40rpx 0 0;
  padding: 10rpx 30rpx;
}

.card-content {
  padding: 20rpx 30rpx 20rpx 50rpx;
}