<van-submit-bar button-text="我想要" bind:submit="onClickButton" tip="{{ true }}">
  <view style="width:700rpx;" class="flex">
    <view class="flex-around-v">
      <van-image width="42rpx" height="40rpx" fit="fit" src="http://www.lemengsc.com:9901/jc/static/wx_imgs/chat.png" />
      <view style="font-size:20rpx;color:#332C2B;">留言</view>
    </view>
    <view class="flex-around-v" style="margin-left:50rpx;" bindtap="addCollect">
      <!-- <van-image width="42rpx" height="40rpx" fit="fit" src="http://www.lemengsc.com:9901/jc/static/wx_imgs/star.png" /> -->
      <van-icon name="star" size="42rpx" color="{{isStar? 'red':'gray'}}" />
      <view style="font-size:20rpx;color:#332C2B;">收藏</view>
    </view>
  </view>
</van-submit-bar>
