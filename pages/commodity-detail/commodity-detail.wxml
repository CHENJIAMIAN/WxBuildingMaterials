<view class="flex van-hairline--bottom" style="padding:30rpx;background:white;">
  <van-image width="77rpx;" radius="2" height="77rpx" fit="cover" src="" />
  <view class="flex-between-v" style="height:77rpx;margin-left:15rpx;">
    <view style="font-size:26rpx;font-weight:bold;">{{name}}</view>
    <view style="color:gray;font-size:20rpx;">
      <!-- -分钟前来过  -->
      <text>发布于{{areaName}}</text>
    </view>
  </view>
</view>
<view style="padding:30rpx;background:white;">
  <view style="color:red;font-size:36rpx;font-weight:bold;">￥115</view>
  <view style="margin-top:10rpx;">{{describes}}</view>
  <view style="margin:30rpx 0;">
    <view>
      <text style="color:gray;font-size:26rpx;">品牌</text><text> {{brandName}}</text>
    </view>
    <view>
      <text style="color:gray;font-size:26rpx;">分类</text><text> {{categoryName}}</text>
    </view>
    <view>
      <text style="color:gray;font-size:26rpx;">成色</text><text> {{qualityName}}</text>
    </view>
    <view>
      <text style="color:gray;font-size:26rpx;">状态</text><text> {{statusName}}</text>
    </view>
  </view>
  <van-image wx:for="{{listImg}}" width="100%" height="10rem" fit="cover" src="{{serverUrl + item.imgUrl}}" />

  <view class="flex-between">
    <van-image width="118rpx" height="25rpx" fit="fit" src="http://www.lemengsc.com:9901/jc/static/wx_imgs/dbjy.png" />
    <view class="flex">
      <view style="color:gray;font-size:24rpx;transform:translateY(-5rpx);margin:0 20rpx;">
        {{wantCount}}人想要·浏览{{browserCount}}</view>
      <van-image width="87rpx" height="35rpx" fit="fit"
        src="http://www.lemengsc.com:9901/jc/static/wx_imgs/jubao.png" />
    </view>
  </view>
</view>
